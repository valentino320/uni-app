<div class="row">
  <div class="col s12">
    <h3 class="center-align">Student's Profile</h3>

      <div class="row">
        <div class="col s12 m6 l6 xl3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Name: <%= @student.name %></span>
              <p><%= @student.email %></p>
              <p>Course Enrolments: None</p>
            </div>
            <div class="card-action">
              <p>Current Enrolments</p>
            </div>
          </div>
          <% if current_user == @student %>
            <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn-large" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>